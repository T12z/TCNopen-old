TARGET_VOS = posix
TARGET_FLAG = POSIX
TCPREFIX = arm-linux-
TCPOSTFIX = 
#TCPATH = /opt/otn_tools/bin/

CINCLUDES = -I../otn/include -I../otn/include/h -I../otn/include/h/msApi
CFLAGS += -fsigned-char -D$(TARGET_FLAG) -mbig-endian -mcpu=xscale -msoft-float -fno-common -fno-builtin -pthread -fPIC -DEMBED -DREDFOX -DCONFIGURE_REDFOX -D_REENTRANT -DO_CNV_SIMPLE -D__BIG_ENDIAN__ $(CINCLUDES)
LDFLAGS += -lrt

