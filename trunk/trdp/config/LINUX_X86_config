ARCH = linux-x86-gnu
TARGET_VOS = posix
TARGET_OS = LINUX
TCPREFIX = 
TCPOSTFIX = 

# the _GNU_SOURCE is needed to get the extended poll feature for the POSIX socket

CFLAGS += -Wall -fstrength-reduce -fno-builtin -fsigned-char -pthread -fPIC -D_GNU_SOURCE -DPOSIX
LDFLAGS += -lrt
